{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "proxy-server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/proxy",
      "methods": ["GET", "OPTIONS"],
      "dest": "/proxy-server/server.js"
    },
    {
      "src": "/api/upload",
      "methods": ["POST", "OPTIONS"],
      "dest": "/proxy-server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ]
}